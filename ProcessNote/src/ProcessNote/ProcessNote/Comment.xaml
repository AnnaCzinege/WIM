<Window x:Class="ProcessNote.Comment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProcessNote"
        mc:Ignorable="d"
        Title="Comments" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="Comments" Margin="10,10,9.6,74" ItemsSource="{Binding CommentList}" >
            
        </ListBox>
        <Button Margin="10,367,661.6,10" Click="AddNewComment">Add comment</Button>
        <TextBox x:Name="CommentTextBox" Margin="146,367,10.6,10"></TextBox>
    </Grid>
</Window>
